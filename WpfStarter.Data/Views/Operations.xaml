<ItemsControl x:Class="WpfStarter.Data.Views.Operations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfStarter.Data.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="270">
    <ItemsControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfStarter.UI;component/Assets/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ItemsControl.Resources>
    <ItemsControl.ItemTemplate>
        <DataTemplate>
            <Button Style="{StaticResource ButtonEnlarged}" 
                HorizontalAlignment="Center" 
                Width="230"
                Height="30"
                Content="From collection"/>
        </DataTemplate>
    </ItemsControl.ItemTemplate>
</ItemsControl>
