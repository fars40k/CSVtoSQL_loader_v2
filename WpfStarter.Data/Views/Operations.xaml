<ItemsControl x:Class="WpfStarter.Data.Views.Operations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfStarter.Data.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="270">
    <ItemsControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WpfStarter.UI;component/Assets/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ItemsControl.Resources>
    <ListBox ItemsSource="{Binding OperationsItems}" 
             SelectionMode="Single"
             VerticalAlignment="Stretch">
        
        
    </ListBox>
</ItemsControl>
