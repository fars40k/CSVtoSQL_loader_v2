<Window x:Class="WpfStarter.UI.Views.DialogViews.StringInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:WpfStarter.UI.Localisation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStarter.UI.Views.DialogViews"
        mc:Ignorable="d"
        Title="" Height="320" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Static p:Strings.DataBase}" FontSize="14" TextAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="DB_string" Text="" Grid.Row="1" Background="LightGoldenrodYellow" Margin="10,0,10,0" TextWrapping="Wrap" FontSize="14"/>
        <Button x:Name="Accept_button" Height="25" Content="{x:Static p:Strings.AcceptAndReturn}" Click="Accept_button_Click" Margin="10,25,10,0" Grid.Row="2" FontSize="14" VerticalAlignment="Top"/>
    </Grid>
</Window>
